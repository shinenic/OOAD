@{
    ViewBag.Title = "Home Page";
}

<div>
    @using (Html.BeginForm("Index", "Search", FormMethod.Get, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <label class="control-label col-sm-2" for="DropDownList_Category">車種</label>
            <div class="col-sm-10">
                <select id="DropDownList_Category" name="DropDownList_Category" class="form-control">
                    <option value="" selected>不限</option>
                    <option value="房車">房車</option>
                    <option value="休旅車">休旅車</option>
                    <option value="貨車">貨車</option>
                </select>
            </div>
        </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="DropDownList_SeatAmount">乘客數</label>
                <div class="col-sm-10">
                    <select id="DropDownList_SeatAmount" name="DropDownList_SeatAmount" class="form-control">
                        <option value="" selected>不限</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="DropDownList_RentalCompany">租車商</label>
                <div class="col-sm-10">
                    <select id="DropDownList_RentalCompany" name="DropDownList_RentalCompany" class="form-control">
                        <option value="" selected>不限</option>
                        <option value="1">中租租車</option>
                        <option value="2">格上租車</option>
                        <option value="3">和運租車</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="DropDownList_CarCompany">車商</label>
                <div class="col-sm-10">
                    <select id="DropDownList_Category" name="DropDownList_Category" class="form-control">
                        <option value="" selected>不限</option>
                        <option value="Ford">Ford</option>
                        <option value="Mitsubishi">Mitsubishi</option>
                        <option value="Toyota">Toyota</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Keyword">搜尋:</label>
                <div class="col-sm-10">
                    @Html.TextBox("Keyword", "", new { @class="form-control", @placeholder = "Enter keyword" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">搜尋</button>
                </div>
            </div>
    }

</div>

