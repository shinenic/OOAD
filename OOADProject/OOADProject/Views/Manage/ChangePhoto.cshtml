@model OOADProject.Models.ChangePhotoViewModel

@{
    ViewBag.Title = "更換大頭貼";
}

<h2>更換大頭貼</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        <hr />
        <div id="uploadimage-div" class="dropzone picdiv">
            <img id="photo" alt="Photo" />
            <input type="text" id="photo_url" />
        </div>
        <script type="text/javascript">
            var feedback = function (res) {
                if (res.success === true) {
                    //$(".dropzone p").hide();
                    $("#photo").attr('src', res.data.link);
                    $("#photo_url").val(res.data.link);
                    //$("#Image" + count).show();
                    //$("#a" + count).show();
                }
            };

            new Imgur({
                clientid: 'cc86a8de0e7c459',
                callback: feedback
            });
        </script>
        <div class="form-group">
            @Html.LabelFor(model => model.NewPhotoUrl, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewPhotoUrl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NewPhotoUrl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

